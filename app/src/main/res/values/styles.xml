<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <!-- 상태바 안보이게 하기 -->
    <style name="NoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 상태바 안보이게 하기 -->
    <style name="PopupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 탭 테마 -->
    <style name="TabTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorPrimary">@android:color/black</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@android:color/white</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <!-- tab text -->
    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#A3A3A3</item>
    </style>
</resources>
